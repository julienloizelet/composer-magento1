{
    "name" : "okaeli/magento1",
    "type" : "project",
    "description" : "Magento 1 project",
    "license": "GPL-3.0+",
    "require": {
        "php": ">=5.4 <5.6",
        "ext-simplexml" : "*",
        "ext-hash" : "*",
        "ext-gd" : "*",
        "ext-dom" : "*",
        "ext-iconv" : "*",
        "ext-curl" : "*",
        "ext-soap" : "*",
        "ext-pdo" : "*",
        "ext-pdo_mysql" : "*",
        "aydin-hassan/magento-core-composer-installer": "^1.3",
        "magento/core" : "^1.9.3",
        "magento-hackathon/magento-composer-installer":"^3.1.2",
        "colinmollenhour/modman": "^1.12"
    },
    "require-dev": {
        "magento-ecg/coding-standard": ">=3.0",
        "squizlabs/php_codesniffer": "3.*",
        "code-x/xtest": "^0.9.0.0",
        "phpunit/phpunit": "4.8.*",
        "yireo/magento1-checkout-tester": "^0.1.12"
    },
    "authors" : [
        {
            "name" : "Julien Loizelet",
            "email" : "julienloizelet@okaeli.com",
            "homepage" : "http://julienloizelet.okaeli.com/",
            "role" : "Developer"
        }
    ],
    "config" : {
        "bin-dir" : "bin",
        "secure-http": false
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/AydinHassan/magento-core-composer-installer"
        },
        {
            "type":"composer",
            "url": "https://packages.firegento.com"
        }
    ],
    "extra":{
        "magento-root-dir": "htdocs/",
        "magento-force": true,
        "magento-deploystrategy": "symlink",
        "disable-core-installer": true,
        "auto-append-gitignore": false
    }
}
